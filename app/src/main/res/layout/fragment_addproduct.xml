<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addproduct"
    >

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/productimage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="#EAE4E4" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/productname1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:layout_centerHorizontal="true"
                android:hint="Product Name:"
                android:ems="10"
                android:fontFamily="serif"
                android:layout_alignTop="@+id/productimage"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textColor="@color/purple"
                    android:fontFamily="serif"
                    android:inputType="textPersonName"
                    android:background="#D795F8"
                    android:textSize="12dp"></com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/discountproduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_centerHorizontal="true"
                android:hint="Discount"
                android:ems="10"
                android:textColor="@color/purple"
                android:fontFamily="serif"
                android:layout_alignTop="@+id/productname1"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:textColor="@color/purple"
                    android:background="#D795F8"
                    android:textSize="12dp"
                    android:fontFamily="serif">
                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/priceofproduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="160dp"
                android:layout_centerHorizontal="true"
                android:hint="Price:"
                android:ems="10"
                android:fontFamily="serif"
                android:layout_alignTop="@+id/productname1"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:textColor="@color/purple"
                    android:background="#D795F8"
                    android:textSize="12dp"
                    android:fontFamily="serif">
                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/priceofproductformembers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_centerHorizontal="true"
                android:hint="Price For Members:"
                android:ems="10"
                android:fontFamily="serif"
                android:layout_alignTop="@+id/priceofproduct"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:textColor="@color/purple"
                    android:background="#D795F8"
                    android:textSize="12dp"
                    android:fontFamily="serif">
                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/deliverycharges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_centerHorizontal="true"
                android:hint="Delivery Charges:"
                android:ems="10"
                android:fontFamily="serif"
                android:layout_alignTop="@+id/priceofproductformembers"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:textColor="@color/purple"
                    android:background="#D795F8"
                    android:textSize="12dp"
                    android:fontFamily="serif">
                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/otherdetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_centerHorizontal="true"
                android:hint="Other Details:"
                android:ems="10"
                android:fontFamily="serif"
                android:layout_alignTop="@+id/deliverycharges"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textLongMessage"
                    android:ems="10"
                    android:textColor="@color/purple"
                    android:background="#D795F8"
                    android:textSize="12dp"
                    android:fontFamily="serif">
                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/addproductbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/otherdetails"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:text="Next"
                android:textSize="12dp" />
            <Button
                android:id="@+id/selectimage"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Select Image"
                android:layout_alignRight="@+id/productimage"
                android:layout_marginRight="130dp"
                android:layout_marginTop="40dp"
                android:textSize="9dp"/>

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_centerHorizontal="true"
                android:layout_alignTop="@+id/otherdetails"/>





        </RelativeLayout>
    </ScrollView>

</FrameLayout>