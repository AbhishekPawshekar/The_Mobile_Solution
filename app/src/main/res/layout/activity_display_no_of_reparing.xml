<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".display_no_of_reparing"
 >

    <include layout="@layout/toolbar_with_on_login_signup"/>

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="65dp">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <!-- TODO: Update blank fragment layout -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                >

                <TextView
                    android:id="@+id/display_productnamereparing"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:textStyle="bold"
                    android:textColor="@color/purple"
                    android:fontFamily="serif"
                    android:text="Product Name"
                    android:layout_alignLeft="@+id/display_productimage"
                    android:textSize="10dp"
                    android:gravity="center_horizontal"
                    />

                <TextView
                    android:id="@+id/display_companynamereparing"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="120dp"
                    android:layout_alignLeft="@+id/display_productnamereparing"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:text="Company Name:"
                    android:textColor="@color/purple"
                    android:textSize="10dp"
                    android:gravity="center_horizontal"
                    />

                <TextView
                    android:id="@+id/displayproblem"
                    android:layout_width="250dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="100dp"
                    android:layout_alignLeft="@+id/display_companynamereparing"
                    android:textStyle="bold"
                    android:text="Problem"
                    android:textColor="@color/purple"
                    android:fontFamily="serif"
                    android:textSize="10dp"
                    android:gravity="center_horizontal"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/reparingrecyclerview"
                    android:layout_marginTop="30dp"

                    />
            </RelativeLayout>
        </HorizontalScrollView>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>