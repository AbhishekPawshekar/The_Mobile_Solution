<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".accountclick">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="660dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/personaldetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:fontFamily="serif"
                android:gravity="center_horizontal"
                android:text="Personal Details:"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nameaccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple"
                android:layout_alignTop="@+id/personaldetails"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="50dp"
                android:fontFamily="serif"
                android:gravity="center_horizontal"
                android:text="Name:"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/enternameaccount"
                android:layout_width="wrap_content"
                android:textColor="@color/purple"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/nameaccount"
                android:layout_alignTop="@+id/personaldetails"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="50dp"
                android:fontFamily="serif"
                android:gravity="center_horizontal"
                android:text=""
                android:textSize="12dp" />

            <TextView
                android:id="@+id/useraccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/nameaccount"
                android:textColor="@color/purple"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="40dp"
                android:fontFamily="serif"
                android:gravity="center_horizontal"
                android:text="User Name:"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/enteruseraccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple"
                android:layout_alignLeft="@+id/useraccount"
                android:layout_alignTop="@+id/enternameaccount"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="40dp"
                android:fontFamily="serif"
                android:gravity="center_horizontal"
                android:text=""
                android:textSize="12dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="180dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/communication_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="serif"
                android:gravity="center_horizontal"
                android:text="Communication Details:"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phoneaccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple"
                android:layout_alignTop="@+id/communication_details"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="40dp"
                android:fontFamily="serif"
                android:gravity="center_horizontal"
                android:text="Phone:"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/enterphoneaccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple"
                android:layout_alignLeft="@+id/phoneaccount"
                android:layout_alignTop="@+id/communication_details"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="40dp"
                android:fontFamily="serif"
                android:gravity="center_horizontal"
                android:text=""
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/emailaccount"
                android:layout_width="wrap_content"
                android:textColor="@color/purple"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/phoneaccount"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="40dp"
                android:fontFamily="serif"
                android:gravity="center_horizontal"
                android:text="Email:"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/enteremailaccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple"
                android:layout_alignLeft="@+id/phoneaccount"
                android:layout_alignTop="@+id/enterphoneaccount"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="40dp"
                android:fontFamily="serif"
                android:gravity="center_horizontal"
                android:text=""
                android:textSize="12dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</FrameLayout>