<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".homeclick">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >
        <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <!-- TODO: Update blank fragment layout -->
            <RelativeLayout
                android:id="@+id/adminproductdetailsui"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                >

                <TextView
                    android:id="@+id/searchview"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:hint="Search"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="5dp" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/searchview1" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/viewtodisplayadvertisement"
                    android:layout_width="wrap_content"
                    android:layout_height="170dp"
                    android:layout_alignTop="@+id/searchview"
                    android:layout_marginTop="40dp"
                   >

                    <com.denzcoskun.imageslider.ImageSlider
                        android:id="@+id/advertisementimageslider"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        app:auto_cycle="true"
                        app:delay="3000"
                        app:period="3000"
                        app:placeholder="@drawable/white_color_background" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/categorystatic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/viewtodisplayadvertisement"
                    android:layout_marginTop="180dp"
                    android:fontFamily="serif"
                    android:text="Category"
                    android:textColor="@color/purple"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/category_seemore"
                    android:layout_width="70dp"
                    android:layout_height="16dp"
                    android:layout_alignTop="@+id/viewtodisplayadvertisement"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="190dp"
                    android:fontFamily="serif"
                    android:gravity="center_horizontal"
                    android:text="See More-"
                    android:textColor="@color/purple"

                    android:textSize="10dp"
                    android:textStyle="bold" />

                <ScrollView
                    android:id="@+id/category_scrolling"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_alignTop="@+id/categorystatic"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                  >

                    <androidx.cardview.widget.CardView
                        android:id="@+id/view3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                       >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                           >

                            <ImageView
                                android:id="@+id/mobiledisplayhomepage"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/mobiledisplay_whitebg" />

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="45dp"
                                android:fontFamily="serif"
                                android:gravity="center_horizontal"
                                android:text="Display"
                                android:textColor="@color/purple"
                                android:textSize="8dp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/mobiledata_cabelhomepage"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="170dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/mobile_data_cable_whitebg" />

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="80dp"
                                android:layout_marginTop="45dp"
                                android:fontFamily="serif"
                                android:gravity="center_horizontal"
                                android:text="Charger"
                                android:textColor="@color/purple"
                                android:textSize="8dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="160dp"
                                android:layout_marginTop="45dp"
                                android:fontFamily="serif"
                                android:gravity="center_horizontal"
                                android:text="Cabels"
                                android:textColor="@color/purple"
                                android:textSize="8dp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/mobile_batterhomepage"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="250dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/mobile_batter_whitebg" />

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="240dp"
                                android:layout_marginTop="45dp"
                                android:fontFamily="serif"
                                android:gravity="center_horizontal"
                                android:text="Battery"
                                android:textColor="@color/purple"
                                android:textSize="8dp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/mobile_coverhomepage"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="320dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/mobilecover_whitebg" />

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="310dp"
                                android:layout_marginTop="45dp"
                                android:fontFamily="serif"
                                android:gravity="center_horizontal"
                                android:text="Covers"
                                android:textColor="@color/purple"
                                android:textSize="8dp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/mobile_chargerhomepage"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="80dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/mobilecharger_whitebg" />

                            <ImageView
                                android:id="@+id/mobile_touchpadhomepage"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="70dp"
                                android:src="@drawable/mobile_touchpad_whitebg" />

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0dp"
                                android:layout_marginTop="105dp"
                                android:fontFamily="serif"
                                android:gravity="center_horizontal"
                                android:text="TouchPad"
                                android:textColor="@color/purple"
                                android:textSize="8dp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/earphonehomepage"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="90dp"
                                android:layout_marginTop="70dp"
                                android:src="@drawable/mobile_earphone_whitebg" />

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="80dp"
                                android:layout_marginTop="105dp"
                                android:fontFamily="serif"
                                android:gravity="center_horizontal"
                                android:text="Earphone"
                                android:textColor="@color/purple"
                                android:textSize="8dp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/headphonehomepage"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="170dp"
                                android:layout_marginTop="70dp"
                                android:src="@drawable/mobileheadphone_whitebg" />

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="160dp"
                                android:layout_marginTop="105dp"
                                android:fontFamily="serif"
                                android:gravity="center_horizontal"
                                android:text="Headphone"
                                android:textColor="@color/purple"
                                android:textSize="8dp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/screen_gardhomepage"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="250dp"
                                android:layout_marginTop="70dp"
                                android:src="@drawable/screen_grad_whitebg" />

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="240dp"
                                android:layout_marginTop="105dp"
                                android:fontFamily="serif"
                                android:gravity="center_horizontal"
                                android:text="Screengrad"
                                android:textColor="@color/purple"
                                android:textSize="8dp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/pdandsdhomepage"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="320dp"
                                android:layout_marginTop="70dp"
                                android:src="@drawable/pd_and_sd_whitebg" />

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="310dp"
                                android:layout_marginTop="105dp"
                                android:fontFamily="serif"
                                android:gravity="center_horizontal"
                                android:text="SD/PD"
                                android:textColor="@color/purple"
                                android:textSize="8dp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                </ScrollView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/category_scrolling"
                    android:layout_marginTop="130dp"
                    android:fontFamily="serif"
                    android:text="Special Offers"
                    android:textColor="@color/purple"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/special_offerrecyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="410dp" />


            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</FrameLayout>