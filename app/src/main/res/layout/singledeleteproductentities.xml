<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="5dp"
    android:background="@color/black"
    android:id="@+id/deleteproductsingleentities">
    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/entered_productimage"
            android:layout_width="30dp"

            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/entered_productname"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textStyle="bold"
            android:textColor="@color/purple"
            android:fontFamily="serif"
            android:layout_marginLeft="50dp"
            android:layout_alignLeft="@+id/entered_productimage"
            android:textSize="10dp"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/entered_productdiscount"
            android:layout_width="50dp"
            android:textColor="@color/purple"
            android:layout_height="20dp"
            android:layout_marginLeft="235dp"
            android:layout_alignLeft="@+id/entered_productname"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textSize="10dp"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/entered_productprice"
            android:layout_width="50dp"
            android:textColor="@color/purple"
            android:layout_height="20dp"
            android:layout_marginLeft="80dp"
            android:layout_alignLeft="@+id/entered_productdiscount"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textSize="10dp"
            android:gravity="center_horizontal"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>