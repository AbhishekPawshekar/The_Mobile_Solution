<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="15dp"
    android:id="@+id/reparingordersui">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
   >
        <TextView
            android:id="@+id/setdisplay_productnamereparing"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textColor="@color/purple"
            android:textSize="10dp"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/setdisplay_companynamereparing"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginLeft="120dp"
            android:layout_alignLeft="@+id/setdisplay_productnamereparing"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textColor="@color/purple"
            android:textSize="10dp"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/setdisplayproblem"
            android:layout_width="250dp"
            android:layout_height="20dp"
            android:textColor="@color/purple"
            android:layout_marginLeft="110dp"
            android:layout_alignLeft="@+id/setdisplay_companynamereparing"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textSize="10dp"
            android:gravity="center_horizontal"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>