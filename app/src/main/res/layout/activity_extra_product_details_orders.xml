<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context=".main_page"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/toolbar_with_on_login_signup"/>
        <TextView
            android:id="@+id/displayproductnameorder"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="@color/purple"
            android:layout_marginTop="70dp"
            android:layout_centerHorizontal="true"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:fontFamily="serif"/>
        <TextView
            android:id="@+id/displayproductdetailsorder"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textColor="@color/purple"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="serif"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:id="@+id/displayextraimageorder"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:layout_alignTop="@+id/displayproductnameorder">

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/extra_image_productorder"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:placeholder="@drawable/white_color_background"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/displayextraimageorder"
            android:layout_marginTop="330dp"
            android:id="@+id/displayextradataorder">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/purple"
                android:id="@+id/displayproductpriceorder"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:fontFamily="serif"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textColor="@color/purple"
                android:text="M.R.P:-"
                android:layout_marginLeft="10dp"
                android:id="@+id/mrpdisplayorder"
                android:layout_marginTop="30dp"
                android:fontFamily="serif" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:id="@+id/displayproductdiscountorder"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="serif"
                android:textColor="#A8FF0000"
                android:layout_alignTop="@+id/displayproductpriceorder"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/purple"
                android:id="@+id/displayyou_save_uptoorder"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="serif"
                android:text="Save Upto:-"
                android:layout_alignTop="@+id/displayproductpriceorder"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:id="@+id/displayyou_save_uptoentryorder"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="90dp"
                android:textColor="@color/purple"
                android:fontFamily="serif"
                android:layout_alignTop="@+id/displayproductpriceorder"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/purple"
                android:id="@+id/displayyourpriceorder"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="serif"
                android:layout_alignTop="@+id/displayproductpriceorder"/>
        </androidx.cardview.widget.CardView>
        <Button

            android:id="@+id/submitButtonbuy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Buy"
            android:enabled="false"
            android:layout_marginTop="150dp"
            android:clickable="false"
            android:layout_alignTop="@+id/displayextradataorder"
            />
    </RelativeLayout>


</ScrollView>

