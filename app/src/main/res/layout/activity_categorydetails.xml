<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".categorydetails"
   >
    <include layout="@layout/toolbar_with_on_login_signup"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="65dp">
    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_alignRight="@+id/centerfinder">

        <TextView
            android:id="@+id/request_to_addcategory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Add Category"
            android:textColor="@color/purple" />
    </RelativeLayout>

    <TextView
        android:id="@+id/centerfinder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_alignLeft="@+id/centerfinder">

        <TextView
            android:id="@+id/request_to_deletecategory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:fontFamily="serif"
            android:gravity="center"
            android:textColor="@color/purple"
            android:text="Delete Category" />

    </RelativeLayout>
    <FrameLayout
        android:id="@+id/categoryframelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>