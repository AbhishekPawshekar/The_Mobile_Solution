<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".after_clicking_home_delivery">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Price:"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:id="@+id/text"
            android:layout_marginLeft="90dp"
            android:fontFamily="serif"
            android:textColor="@color/purple"/>
        <TextView
            android:id="@+id/productpricebuyhome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@+id/text"
            android:layout_marginLeft="150dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="serif"
            android:textColor="@color/purple"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery Charges:"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:id="@+id/deliverytext"
            android:layout_marginLeft="90dp"
            android:fontFamily="serif"
            android:textColor="@color/purple"/>
        <TextView
            android:id="@+id/deliverybuyhome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="0"
            android:layout_alignLeft="@+id/deliverytext"
            android:layout_marginLeft="150dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="serif"
            android:textColor="@color/purple"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Charges:"
            android:textStyle="bold"
            android:layout_marginTop="90dp"
            android:id="@+id/totaltext"
            android:layout_marginLeft="90dp"
            android:fontFamily="serif"
            android:textColor="@color/purple"/>
        <TextView
            android:id="@+id/totalbuyhome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginTop="90dp"
            android:layout_alignLeft="@+id/totaltext"
            android:layout_marginLeft="150dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="serif"
            android:textColor="@color/purple"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/address_to_delivery"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="60dp"
            android:ems="10"
            android:layout_alignTop="@+id/totalbuyhome"
            android:hint="Address Of Delivery:"
            android:textSize="10dp">

            <com.google.android.material.textfield.TextInputEditText

                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:ems="10"
                android:textColor="@color/purple"
                android:inputType="textPersonName"
                android:textSize="10dp"
                android:background="#D795F8"
                android:textStyle="normal|italic"

                ></com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/orderbuttonhome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Order"/>
    </RelativeLayout>


</FrameLayout>